@page "/AllRestaurants"

<h3>Component1</h3>
<div class="container-fluid">
    <div class="row">
        @{
            foreach (var item in RestarauntList)
            {
                <div class="card row w-50 mr-1 mb-1">
                    <div class="card-body col-12">
                        <div class="col-12">
                            <img src="@item.FieldRestaurantLogo" class="img-fluid mx-auto" alt="" width="250" height="250">
                        </div>
                        <div class="col-12">
                            <h5 class="card-title">Special title treatment</h5>
                            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                            <a href="Restaurants/@item.Nid" class="btn btn-primary">Go somewhere</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>