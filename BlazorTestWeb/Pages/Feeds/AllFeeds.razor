@page "/AllFeeds" 

<div>
    <p>This is the feeds</p>
</div>

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @{
                foreach (var item in FeedList)
                {
                    if(FeedList.First() == item)
                    {
                        LoopFirstRun = "active";
                    }
                    else
                    {
                        LoopFirstRun = "";
                    }
                    <div class="carousel-item @LoopFirstRun">
                        <img src="@item.FieldFeedImage" class="d-block w-100" alt="...">
                    </div>
                }
            }
            <ol class="carousel-indicators">
                @{
                    var itemIndexer = 0;
                    foreach (var item in FeedList)
                    {
                        if(FeedList.First() == item)
                        {
                            LoopFirstRun = "active";
                        }
                        else
                        {
                            LoopFirstRun = "";
                        }
                        <li data-target="#carouselExampleIndicators" data-slide-to="@itemIndexer" class="@LoopFirstRun"></li>
                        itemIndexer++;
                    }
                }
            </ol>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>